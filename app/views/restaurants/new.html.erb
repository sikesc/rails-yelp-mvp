<div class="new-page-container">
  <h1>Add a Restaurant</h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORY.sort, include_blank: false %>
    <div class="d-grid gap-2">
      <%= f.submit 'Add', class: 'btn btn-success mt-3' %>
    </div>
  <% end %>
</div>
